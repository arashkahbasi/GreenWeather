<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="@dimen/_4sdp"
    android:background="#00FFFFFF"
    android:orientation="vertical"
    tools:context=".weather_contract.weather_views.WeatherHomeActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_days_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:text="Sun"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="@dimen/_16sdp"
        android:id="@+id/recycler_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20Â°C"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="@id/tv_days_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_days_name"
        app:layout_constraintTop_toTopOf="@+id/tv_days_name" />


</androidx.constraintlayout.widget.ConstraintLayout>